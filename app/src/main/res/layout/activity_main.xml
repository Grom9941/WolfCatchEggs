<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageViewNintendo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/nintendo" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button"
            android:onClick="clickButton1" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button"
            android:onClick="clickButton2" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageButton1"
            android:background="@drawable/button"
            android:onClick="clickButton3" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageButton2"
            android:background="@drawable/button"
            android:onClick="clickButton4" />

        <Button
            android:id="@+id/button"
            android:layout_width="76dp"
            android:layout_height="36dp"
            android:layout_above="@+id/imageButton2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:background="@android:color/darker_gray"
            android:onClick="pushedPause"
            android:text="@string/pause"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageViewWolf"
            android:layout_width="175dp"
            android:layout_height="172dp"
            android:layout_alignTop="@+id/imageButton1"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/wolf1" />

        <ImageView
            android:id="@+id/imageViewTube1"
            android:layout_width="170dp"
            android:layout_height="103dp"
            android:layout_above="@+id/imageButton1"
            android:layout_toLeftOf="@+id/imageViewWolf"
            android:layout_toStartOf="@+id/imageViewWolf"
            app:srcCompat="@drawable/tube1" />

        <ImageView
            android:id="@+id/imageViewTube2"
            android:layout_width="174dp"
            android:layout_height="103dp"
            android:layout_above="@+id/imageButton1"
            android:layout_toEndOf="@+id/imageViewWolf"
            android:layout_toRightOf="@+id/imageViewWolf"
            app:srcCompat="@drawable/tube2" />

        <ImageView
            android:id="@+id/imageViewTube3"
            android:layout_width="149dp"
            android:layout_height="120dp"
            android:layout_alignTop="@+id/imageButton1"
            android:layout_toLeftOf="@+id/imageViewWolf"
            android:layout_toStartOf="@+id/imageViewWolf"
            app:srcCompat="@drawable/tube3" />

        <ImageView
            android:id="@+id/imageViewTube4"
            android:layout_width="151dp"
            android:layout_height="120dp"
            android:layout_alignTop="@+id/imageButton1"
            android:layout_toEndOf="@+id/imageViewWolf"
            android:layout_toRightOf="@+id/imageViewWolf"
            app:srcCompat="@drawable/tube4" />

        <ImageView
            android:id="@+id/imageViewEgg1"
            android:layout_width="33dp"
            android:layout_height="36dp"
            android:layout_alignLeft="@+id/imageViewTube3"
            android:layout_alignStart="@+id/imageViewTube3"

            android:layout_alignTop="@+id/imageViewTube1" />

        <ImageView
            android:id="@+id/imageViewEgg2"
            android:layout_width="33dp"
            android:layout_height="36dp"
            android:layout_alignEnd="@+id/imageViewTube4"
            android:layout_alignRight="@+id/imageViewTube4"

            android:layout_alignTop="@+id/imageViewTube1" />

        <ImageView
            android:id="@+id/imageViewEgg3"
            android:layout_width="33dp"
            android:layout_height="36dp"
            android:layout_alignLeft="@+id/imageViewTube3"
            android:layout_alignStart="@+id/imageViewTube3"

            android:layout_alignTop="@+id/imageButton1" />

        <ImageView
            android:id="@+id/imageViewEgg4"
            android:layout_width="33dp"
            android:layout_height="36dp"
            android:layout_alignEnd="@+id/imageViewTube4"
            android:layout_alignRight="@+id/imageViewTube4"

            android:layout_alignTop="@+id/imageButton1" />

        <ImageView
            android:id="@+id/imageViewEgg13Crush"
            android:layout_width="33dp"
            android:layout_height="36dp"
            android:layout_alignBottom="@+id/imageViewWolf"
            android:layout_toLeftOf="@+id/imageViewWolf"
            android:layout_toStartOf="@+id/imageViewWolf" />

        <ImageView
            android:id="@+id/imageViewEgg24Crush"
            android:layout_width="33dp"
            android:layout_height="36dp"
            android:layout_alignBottom="@+id/imageViewWolf"
            android:layout_toEndOf="@+id/imageViewWolf"
            android:layout_toRightOf="@+id/imageViewWolf" />

        <ImageView
            android:id="@+id/imageViewLife1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewTube1"
            android:layout_toStartOf="@+id/imageViewLife2"
            app:srcCompat="@android:drawable/btn_star_big_on"
            tools:ignore="UnknownId"
            android:layout_toLeftOf="@+id/imageViewLife2" />

        <ImageView
            android:id="@+id/imageViewLife2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewTube1"
            android:layout_toStartOf="@+id/imageViewLife3"
            app:srcCompat="@android:drawable/btn_star_big_on"
            tools:ignore="RtlCompat,UnknownId" />

        <ImageView
            android:id="@+id/imageViewLife3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageViewWolf"
            android:layout_alignTop="@+id/imageViewTube1"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:layout_alignRight="@+id/imageViewWolf"
            tools:ignore="RtlCompat" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>